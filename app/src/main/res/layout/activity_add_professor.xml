<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- Here you put the rest of your current view-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--to show already added departments, to add professor in-->
        <Spinner
            android:id="@+id/spinnerdepartment"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            android:gravity="center"
            android:textColor="#6c1111"
            android:textSize="25dp"
            android:text="Add New Professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--input professor name-->
        <EditText
            android:hint="enter professor name"
            android:id="@+id/edittext_professor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--input professor email-->
        <EditText
            android:id="@+id/edittext_email"
            android:hint="enter email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--input professor mobile-->
        <EditText
            android:id="@+id/edittext_mobile"
            android:hint="enter professor mobile"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--professor image path-->
        <TextView
            android:text="Image path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edittext_imagepath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--buttonto open gallery to choose professor image-->
        <Button
            android:onClick="gallery"
            android:text="Open Gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--button to add professor in firebase database-->
        <Button
            android:onClick="add"
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:gravity="center"
            android:id="@+id/tv1"
            android:textColor="#6c1111"
            android:textSize="25dp"
            android:text="List of Professors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--listview to view already added professors and to delete them-->
        <ListView
            android:id="@+id/listview_professor"
            android:layout_width="match_parent"
            android:layout_height="350dp"></ListView>


    </LinearLayout>
</ScrollView>